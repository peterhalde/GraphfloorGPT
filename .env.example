# Database Configuration (Required)
DATABASE_URL="postgresql://username:password@localhost:5432/yourdbname"

# AI Service Configuration (Required for AI features)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# OpenAI Configuration (Optional - if using OpenAI models)
OPENAI_API_KEY="your_openai_api_key_here"

# Azure OpenAI Configuration (Optional - if using Azure OpenAI)
AZURE_OPENAI_API_KEY="your_azure_openai_api_key_here"
AZURE_OPENAI_API_INSTANCE_NAME="your_instance_name"
AZURE_OPENAI_API_DEPLOYMENT_NAME="your_deployment_name"
AZURE_OPENAI_API_VERSION="2024-02-15-preview"

# Google Cloud Storage (Optional - for file storage)
GOOGLE_CLOUD_PROJECT_ID="your_project_id"
GOOGLE_CLOUD_STORAGE_BUCKET="your_bucket_name"
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account.json"

# Neo4j Graph Database (Optional - for graph features)
NEO4J_URI="bolt://localhost:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your_neo4j_password"

# Session Configuration
SESSION_SECRET="your_secure_session_secret_here_change_this"

# Application Configuration
NODE_ENV="development"
PORT="5000"